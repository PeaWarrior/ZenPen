<h1>Posts</h1>
<hr>
<%= form_with url: posts_path, method: :get, local: true do |f| %>

    <%= f.label :search %>
    <%= f.text_field :search %>

    <%= f.submit "Search" %>

<% end %>

<%= button_to "Write a new post", new_post_path, method: :get %>

<% @posts.each do |post| %>
    <%= render partial: 'post', locals: { post: post } %>
<% end %>