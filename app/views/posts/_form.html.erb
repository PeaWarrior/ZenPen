<%= form_with model: post do |f| %>


    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :content %><br>
    <%= f.text_area :content %><br>

    <%= f.label :tags %><br>
    <%= f.text_field :tags %><br>

    <%= f.submit %>

<% end %>

    <%= post.errors[:title].message if post.errors[:title] %>