<% if post.errors.any? %>
    <% post.errors.full_messages.each do |m| %>
        <div class="message"><%= m %></div>
    <% end %>
    <br>
<% end %>

<%= button_to "Prompt Me", '/prompt', method: :get %>

<% if @prompt %>
  <%= @prompt %>
  <br>
<% end %>
<br>

<%= form_with model: post, local: true do |f| %>

    <%= f.hidden_field :user_id, value: "#{user.id}" %>

    <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "#{post.errors[:title][0] if post.errors[:title]}" %><br><br>
    </div>

    <%= f.label :content %><br>
    <%= f.text_area :content, cols: "70", rows: "20" %><br><br>

    <%= f.label :tag_names, "Tags" %><br>
    <%= f.text_field :tag_names, placeholder: "funny, happy, etc.." %><br><br>

    <%= f.submit %><br><br>

<% end %><br><br>