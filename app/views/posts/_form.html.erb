<%= button_to "Prompt Me", '/prompt', class: "btn btn-outline-dark btn-sm", method: :get %>
<br>

<% if @prompt %>
  <%= @prompt %>
  <br>
<% end %>
<br>

<%= form_with model: post, local: true do |f| %>

    <%= f.hidden_field :user_id, value: "#{user.id}" %>

    
    <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
    <span class="errors message"><%= "Title #{post.errors[:title][0]}" if post.errors[:title].any? %></span>
    <br>
    
    <%= f.text_area :content, placeholder: "Content", class: "form-control", rows: "15" %>
    <span class="errors message"><%= "Content #{post.errors[:content][0]}" if post.errors[:content].any? %></span>
    <br>

    <%= f.text_field :tag_names, class: "form-control", placeholder: "Tags (optional)" %><br>

    <%= current_page?(new_post_path) ? (f.submit "New Entry", class: "btn btn-outline-dark btn-sm") : (f.submit "Edit Entry", class: "btn btn-outline-dark btn-sm") %><br><br>

<% end %>

<br><br>