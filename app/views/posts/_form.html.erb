<%= form_with model: post, local: true do |f| %>
    <%= f.hidden_field :user_id, value: "#{user.id}" %>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>

    <%= f.label :content %><br>
    <%= f.text_area :content, cols: "70", rows: "30" %><br><br>

    <%= f.label :tag_names, "Tags" %><br>
    <%= f.text_field :tag_names %><br><br>

    <%= f.submit %><br><br>

    <% if post.errors.any? %>
        <% post.errors.full_messages.each do |m| %>
            <%= m %><br>
        <% end %>
    <% end %>

<% end %>
