<h1>Edit Account</h1>

<hr>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <div class="message">
      <%= error %>
    </div>
  <% end %>
<% end %>


<%= render 'form' %>

<div id="delete-link"> 
  <%= link_to "Delete Account", "/users/#{current_user.id}", method: :delete, :data => {:confirm => 'Are you sure you want to delete your account?'}%>
</div>
